- @title = "#{@user.real_name} - edit"
.bread_crumbs
  = link_to "Users", users_path
  &gt;
%h1
  = link_to_ar @user
  &gt;
  Edit

= error_messages_for :user
= form_for @user, :builder => EasyFormBuilder do |f|
  = f.text_field :handle
  = f.text_field :real_name
  = f.text_area :about
  .profileQuestions
    - f.fields_for :user_profile_questions do |f2|
      = f2.text_field :question
      = f2.text_field :answer
  %div
    = link_to_function "add another", "$$('.profileQuestions div').invoke('show');$(this).hide()"
  = f.submit "Save"