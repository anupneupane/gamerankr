= error_messages_for :port
- form_for @port, :builder => EasyFormBuilder do |f|
  = f.text_field :title
  
  = f.select :platform_id, [["CHOOSE", nil]] + Platform.all.collect{|p| [p.name, p.id]}
  = f.calendar_date_select :released_at,
    :time => false,
    :year_range => 50.years.ago..5.years.from_now
  = f.select :released_at_accuracy, Port::RELEASED_AT_ACCURACIES
  = f.text_field :upc
  = f.text_field :ean
  = f.text_field :manufacturer
  = f.text_field :brand
  = f.text_field :binding
  = f.submit "Save"